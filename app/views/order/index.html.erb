			<form action="/order" method="post" accept-charset="utf-8">
            <h1 id = "order-title">Order Form</h1>

              <table class = "table-wrapper" >
                        <tr id = "tablehead">
                             <th style="text-align:center" >Product</th>
                            
                              <th style="text-align:center" >Quantity</th>
                            
                             <th style="text-align:center">Unit Price</th>
                             
                             <th style="text-align:center">Totals</th>
                        </tr>
                       
                        <tr class="odd">
                            <td class="product-title">Chicken Burrito</td>
                            
                            <td class="num-pallets"><input name="chicken" type="text" class="num-pallets-input" id="num_chicken"></td>
                            <td class="price-per-pallet">$<span>12</span></td>
                            
                            <td class="row-total"><input type="text" class="row-total-input" id="sparkle-row-total" disabled="disabled"></td> 
                        </tr>
                       
                        <tr class="even">
                            <td class="product-title">Steak Burrito</td>
    
                            <td class="num-pallets"><input name="steak" type="text" class="num-pallets-input" id="turface-mvp-num-pallets"></td>
                            
                            <td class="price-per-pallet">$<span>12</span></td>
                            
                            <td class="row-total"><input type="text" class="row-total-input" id="turface-mvp-row-total" disabled="disabled"></td> 
                            
                        </tr>
                       
                        <tr class="odd">
                            <td class="product-title">Carnitas Burrito</td>
                            
                             
                            <td class="num-pallets"><input name="carn" type="text" class="num-pallets-input" id="turface-pro-league-num-pallets" ></td>
                            
                            <td class="price-per-pallet">$<span>12</span></td>
                            
                            <td class="row-total"><input type="text" class="row-total-input" id="turface-pro-league-row-total" disabled="disabled"></td>
                            
                        </tr>
                       
                        <tr class="even">
                            <td class="product-title">Barbacoa Burrito</td>
                            
                             <td class="num-pallets"><input name="barb" type="text" class="num-pallets-input" id="turface-pro-league-red-num-pallets"></td>
                    
                            <td class="price-per-pallet">$<span>12</span></td>
                            
                            <td class="row-total"><input type="text" class="row-total-input" id="turface-pro-league-red-row-total" disabled="disabled"></td> 
                              
                        </tr>
                       
                        <tr class="odd">
                            <td class="product-title">Vegetarian Burrito</td>
                            
                            <td class="num-pallets"><input name="veg" type="text" class="num-pallets-input" id="turface-quick-dry-num-pallets" ></td>
                            
                            <td class="price-per-pallet">$<span>12</span></td>
                            
                            <td class="row-total"><input type="text" class="row-total-input" id="turface-quick-dry-row-total" disabled="disabled"></td> 
                            
                        </tr>
                        <tr class="even">
                            
                            <td class="product-title">Chips and Guacamole </td>
                            
                            <td class="num-pallets"><input name="ChipMole" type="text" class="num-pallets-input" id="turface-mound-clay-red-num-pallets"></td>
                            
                            <td class="price-per-pallet">$<span>5</span></td>
                           
                            <td class="row-total"><input type="text" class="row-total-input" id="turface-mound-clay-red-row-total" disabled="disabled"></td> 
                        </tr>
                       
                        <tr class="odd">
                            <td class="product-title">Drink(specify in comments) </td>
                            
                            <td class="num-pallets"><input name="drink" type="text" class="num-pallets-input" id="diamond-pro-red-num-pallets" ></td>
                            
                            <td class="price-per-pallet">$<span>2</span></td>
                           
                            <td class="row-total"><input type="text" class="row-total-input" id="diamond-pro-red-row-total" disabled="disabled"></td>
                       
                       </tr>
                       
                        <!--<tr class="even">
                            <td class="product-title">Combo(Burrito,Chips/Guacamole,Drink) </td>
                           
                            <td class="num-pallets"><input name="combo" type="text" class="num-pallets-input" id="diamond-pro-drying-agent-num-pallets"></td>
                            
                            <td class="price-per-pallet">$<span>15</span></td>
                            
                            <td class="row-total"><input type="text" class="row-total-input" id="diamond-pro-drying-agent-row-total" disabled="disabled"></td> 
                        </tr>  -->
                    </table>

    <div class="clear"></div>

        <div style="text-align: center;">
            <span>ORDER TOTAL: </span>
            <input type="text" class="total-box" value="$0" id="order-total" disabled="disabled">

            <br />

            

                
                <!-- Main -->
			                 
                        <h2>Delivery Information</h2>
                            
                            <fieldset>
                                <div>
                                    <input name="name" type="text" id= "name" placeholder="Name">
                                </div>

                                <div>
                                    <label for="location"></label>
                                    <input name="location" type="text" placeholder="Location">
                                </div>
                                
                                <div>
                                    <label for="phone_number"></label>
                                    <input id="phone_number" type="text" name="number" placeholder="Phone Number">
                                </div>

                                <div >
                                    <label for="email"></label>
                                    <input id="email" name="email" type="email" placeholder="Email Address">
                                </div>
                                
                                <div id = "day_select">
                                    <label for="day_select">Delivery Date</label>
                                <input type="radio" name="day" value="wed" id = "wed" checked>
                                    <label for="wed">Wednesday</label>
                                <input type="radio" name="day" value="fri" id = "fri">
                                    <label for="fri">Friday</label>
                                </div>
                                
                            </fieldset>
                                <div>

                
        </div>

    </div>
                                <div>
                                    
                               
                                    
                                </div>
                            <input type="submit" value="Submit">
                        </form>
						
				
                    </article>
